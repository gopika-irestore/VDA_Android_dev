<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/imageLayout"
            android:background="@color/dividercolor"
            android:layout_height="160dp">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/profileImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/userdefault"
                />
            <TextView
                android:id="@+id/uploadPhotoLabel"
                style="@style/TextStyleDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Upload Photo"/>
        </LinearLayout>
<RelativeLayout
    android:layout_below="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.securax.irestore_firstresponder.MyProfile"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp">

    <EditText
        android:id="@+id/registeredEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:text="Email"
        android:focusable="false"
        android:textSize="13dp"
        android:textColor="#999999"
        android:editable="false"
        android:inputType="none"

        />

    <EditText
        android:id="@+id/registeredNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Phone Number"
        android:focusable="false"
        android:textSize="13dp"
        android:editable="false"
        android:inputType="none"
        android:layout_below="@id/registeredEmail"
        android:textColor="#999999"
        />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="First Name"
        android:textSize="13dp"
        android:inputType="textPersonName"
        android:layout_below="@id/registeredNumber"
        android:textColor="#999999"
        android:singleLine="true"
        android:imeOptions="actionNext"
        />
    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Last Name"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:textSize="13dp"
        android:layout_below="@id/firstName"
        android:textColor="#999999"
        android:imeOptions="actionNext"

        />
    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Title"
        android:textSize="13dp"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:layout_below="@id/lastName"
        android:textColor="#999999"
        android:imeOptions="actionNext"
        />
    <EditText
        android:id="@+id/organization"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Organization"
        android:textSize="13dp"
        android:inputType="text"
        android:layout_below="@id/title"
        android:textColor="#999999"
        android:imeOptions="actionNext"
        />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="City"
        android:textSize="13dp"
        android:inputType="text"
        android:layout_below="@id/organization"
        android:textColor="#999999"
        android:imeOptions="actionNext"
        />

    <EditText
        android:id="@+id/county"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="County"
        android:textSize="13dp"
        android:inputType="text"
        android:layout_below="@id/city"
        android:textColor="#999999"
        android:imeOptions="actionNext"
        />

    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="State"
        android:textSize="13dp"
        android:inputType="text"
        android:layout_below="@id/county"
        android:textColor="#999999"
        android:imeOptions="actionDone"
        />


    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/signOutBtn"
        android:background="@mipmap/greenbutton"
        android:textColor="#ffffff"
        android:layout_below="@id/state"
        android:layout_centerInParent="true"
        android:textSize="16dp" />

</RelativeLayout>
    </RelativeLayout>
</ScrollView>