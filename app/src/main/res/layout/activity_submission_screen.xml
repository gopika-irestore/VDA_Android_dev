<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Submission_screen">
    <android.support.v7.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/HeaderBar"
        android:background="@drawable/ic_toolbar_design"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/backButton_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/arrow"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/topToolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/topToolbar_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:typeface="sans"
        android:textSize="19sp"
        android:textColor="#000"
        android:text="Damage Assessment"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/topToolbar"
        app:layout_constraintTop_toTopOf="@+id/topToolbar"
        app:layout_constraintRight_toRightOf="@+id/topToolbar"
        />
    <TextView
        android:id="@+id/nextButton_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Submit"
        android:textSize="17sp"
        android:textColor="#3EA99F"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="@+id/topToolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textviewPoleheight"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:visibility="visible"
            android:background="@drawable/custom_spinner_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ft"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            />
        </RelativeLayout>
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="#b6b3b3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Submitter Info"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#e4e2e2"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/submitter_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/submitter_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat/Long"
                android:textSize="17sp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/lattitude_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latt/long"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road Blocked"
                android:textSize="17sp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"/>

            <Switch
                android:id="@+id/road_block_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police/Fire Satanding by"
                android:layout_gravity="left"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <Switch
                android:id="@+id/police_fireStanding_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wire Guard Standing by"
                    android:textSize="17sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"/>

                <Switch
                    android:id="@+id/wire_gurdStanding_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Scopes"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#e4e2e2"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/imageGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Parts"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#e4e2e2"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>