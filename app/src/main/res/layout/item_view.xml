<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:id="@+id/scope_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                 />

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/icon"
                 />

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/icon_1"
                 />

            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/icon_2"
                 />

        </LinearLayout>

        <TextView
            android:id="@+id/pole_Id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="PoleID "
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/lightGray" />

        <TextView
            android:id="@+id/pole_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/pole_Id_text"
            android:textColor="@color/lightGray"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pole_height_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pole_Id_text"
            android:layout_marginLeft="5dp"
            android:text="Pole Height - "
            android:textSize="12dp"
            android:textColor="@color/lightGray" />

        <TextView
            android:id="@+id/pole_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pole_Id_text"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/pole_height_text"
            android:textSize="12dp"
            android:textColor="@color/lightGray" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pole_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/line1"
            android:text="address"
            android:textSize="12dp"
            android:textColor="#000000" />

        <View
            android:id="@+id/line1"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_below="@+id/date"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/success"
            android:gravity="center_vertical"
            android:background="@color/lightGray" />

        <ImageView
            android:id="@+id/success"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/date"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:src="@mipmap/tick" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="date"
            android:textSize="12dp"
            android:textColor="@color/lightGray" />

        <TextView
            android:id="@+id/reportr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>